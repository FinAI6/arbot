# ==============================================
# ARBOT Configuration Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================
# Trading Configuration
# ==============================================
# Trading mode: live, simulation, or backtest
TRADING_MODE=simulation

# ==============================================
# Exchange API Credentials
# ==============================================
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# OKX
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_TESTNET=false

# Bitget
BITGET_API_KEY=your_bitget_api_key_here
BITGET_API_SECRET=your_bitget_api_secret_here
BITGET_TESTNET=false

# Upbit
UPBIT_API_KEY=your_upbit_api_key_here
UPBIT_API_SECRET=your_upbit_api_secret_here
UPBIT_TESTNET=false

# ==============================================
# Database Configuration
# ==============================================
# Path to SQLite database file
DATABASE_PATH=arbot.db

# ==============================================
# Logging Configuration
# ==============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==============================================
# Optional: Additional Settings
# ==============================================
# These can also be set via config.json file

# Arbitrage settings
# MIN_PROFIT_THRESHOLD=0.001
# MAX_POSITION_SIZE=1000.0
# MAX_TRADES_PER_HOUR=50
# TRADE_AMOUNT_USD=100.0
# SLIPPAGE_TOLERANCE=0.001
# MAX_SPREAD_AGE_SECONDS=5.0

# Risk management settings
# MAX_DRAWDOWN_PERCENT=5.0
# STOP_LOSS_PERCENT=2.0
# POSITION_SIZING_METHOD=fixed
# MAX_CONCURRENT_TRADES=3
# BALANCE_THRESHOLD_PERCENT=10.0

# UI settings
# REFRESH_RATE_MS=500
# ENABLE_NOTIFICATIONS=true
# THEME=dark

# Backtest settings
# BACKTEST_START_DATE=2024-01-01
# BACKTEST_END_DATE=2024-12-31
# BACKTEST_INITIAL_BALANCE=10000.0
# BACKTEST_DATA_SOURCE=database
# BACKTEST_CSV_PATH=

# ==============================================
# Security Notes
# ==============================================
# - Never share your API keys
# - Use testnet for development/testing
# - Keep your .env file secure and never commit it
# - Consider using read-only API keys for monitoring
# - Enable IP whitelisting on your exchange accounts